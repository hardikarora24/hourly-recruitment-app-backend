doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Master - Create Admin
  body 
    h1 Create Admin
    form(action="./create-admin", method="POST")
      input(type="text", hidden, name="masterUsername", value=masterUsername)
      input(type="password", hidden, name="masterPassword", value=masterPassword) 

      input(type="text", , placeholder="admin first name", name="first_name", value=first_name)
      input(type="text", , placeholder="admin last name", name="last_name", value=last_name)
      input(type="text", name="username", placeholder="admin username")
      input(type="password", name="password", placeholder="admin password")

      input(type="submit", value="Submit")